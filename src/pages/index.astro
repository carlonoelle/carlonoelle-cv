-->
<AstroSeo
  title="Carlo Nölle - CV"
  description="Curriculum Vitae of Carlo Nölle - Software Engineer from Cologne, Germany"
  openGraph={{
    url: 'https://carlonoelle.de',
    title: 'Carlo Nölle - CV',
    description:
      'Curriculum Vitae of Carlo Nölle - Software Engineer from Cologne, Germany',
    site_name: 'Carlo Nölle - CV',
  }}
